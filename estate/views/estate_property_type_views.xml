<odoo>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.type</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">Type List</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="estate_property_type_form" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <form string="Form Viwe">
            <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="offer_count" string="The number of associated offeres for this property:"/> 
                    </group>
                    <notebook  colspan="4">
                            <page string="Associated properties">
                                <button class="oe_stat_button"  icon="fa-book" type="action" name="%(estate_offers_view_action)d" string="Show Associated Offers"/>
                                <field name="property_list" readonly='1'>
                                    <tree>
                                        <field name="name"/>
                                        <field name="expected_price"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                    </notebook>
            </sheet>
            </form>
        </field>
    </record>
</odoo>