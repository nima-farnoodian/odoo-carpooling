    <odoo>
        
        <record id="estate_offers_view_tree" model="ir.ui.view">
            <field name="name">Offers List</field>
            <field name="model">estate.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="action_accept" string="Accept" type="object" icon="fa-check" invisible="1"/>
                    <button name="action_refuse" string="Refuse" type="object" icon="fa-times" invisible="1"/>
                    <field name="Status"/>
                </tree>
            </field>
        </record>

        <record id="estate_offers_form" model="ir.ui.view">
            <field name="name">Offer</field>
            <field name="model">estate.offer</field>
            <field name="arch" type="xml">
                <form string="Form Viwe">
                    <sheet>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

    </odoo>