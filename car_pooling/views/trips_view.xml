<odoo>

    <record id="car_pooling_action" model="ir.actions.act_window">
        <field name="name">Car pooling: Trips</field>
        <field name="res_model">car.pooling</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'search_default_availability': True, 'search_default_current': True}</field> -->
    </record>


    
    <record id="car_pooling_view_tree" model="ir.ui.view">
        <field name="name">Trips</field>
        <field name="model">car.pooling</field>
        <field name="arch" type="xml">
            <!-- <tree decoration-success="state in ('Offer_Received','Offer_Accepted')"  decoration-muted="state=='sold'"  decoration-bf="state=='Offer_Accepted'" decoration-danger="state=='canceled'"> -->
            <tree>
                <field name="driver"/>
                <field name="capacity"/>
                <field name="source_city"/>
                <field name="source_address"/>
                <field name="departure_date" />
                <field name="departure_time"/>
                <field name="destination_city"/>
                <field name="destination_address"/>
                <field name="status"/>
                <field name="tag" optional="1"/>
                <field name="is_round_trip"/>
                <field name="return_date" />           
                <field name="return_time"/>
                <!-- <field name="passanger_ids"/> -->
            </tree>
        </field>
    </record>



       <record id="trip_form" model="ir.ui.view">
        <field name="name">Trip Form</field>
        <field name="model">car.pooling</field>
        <field name="arch" type="xml">
            <form string="Form Viwe">
                <header>
                        <!-- <button name="sold_action" type="object" string="Sold" states='Offer_Accepted'/> -->
                        <button name="cancel_action" type="object" string="Cancel" attrs="{'invisible': [('status', '=', 'departed')]}"/> 
                        <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        My new trip 
                    </h1>
                    <group>
                        <group>
                            <field name="driver"/>
                        </group>
                        <group>
                            <field name="capacity"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                            <field name="is_round_trip"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                        </group>
                        <!-- <separator string="Requirements"/> -->
                        <notebook  colspan="4">
                            <page string="Trip Information">
                                <group>
                                    <field name="departure_date"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                    <field name="departure_time" widget="float_time"/>
                                    <field name="source_city"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                    <field name="source_address" attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                    <field name="destination_city"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                    <field name="destination_address"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                    <field name="return_date"  attrs="{'invisible': [('is_round_trip', '=', False)],'readonly':  [('status', 'in', ('unavailable','canceled'))]}"/>           
                                    <field name="return_time"  attrs="{'invisible': [('is_round_trip', '=', False)],'readonly':  [('status', 'in', ('unavailable','canceled'))]}"/>           
                                </group>
           
                            </page>
                            <page string="Driver Information">
                                <group>
                                    <h1>
                                       Driver Information will appear here
                                    </h1>
                                    <!-- <field name="salesperson"  attrs="{'readonly': [('state', 'in', ('sold','canceled'))]}"/>
                                    <field name="buyer"  attrs="{'readonly': [('state', 'in', ('sold','canceled'))]}"/> -->
                                </group>
                            </page>
                            <page string="Driver Comments">
                                <group>
                                    <field name="comments"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/> 
                                </group>
                            </page>
                            <page string="Tags">
                                <group>
                                    <field name="tag" widget="many2many_tags" options="{'color_field': 'color'}"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                </group>
                            </page>
                            <page string="Passanger">
                                <group>
                                    <field name="passanger_ids"  attrs="{'readonly': [('status', 'in', ('unavailable','canceled'))]}"/>
                                </group>
                            </page>
                            <page string="Comments for Driver">
                                <group>
                                    <h1>
                                       Comments for Driver will appear here
                                    </h1>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>

        </field>
    </record>




</odoo>
