    <odoo>
        <record id="comment_view_tree" model="ir.ui.view">
            <field name="name">Comments</field>
            <field name="model">car.pooling.comment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="comment"/>
                    <field name="trip_star" widget="priority"/>
                </tree>
            </field>
        </record>

        <record id="passenger_form" model="ir.ui.view">
            <field name="name">Comment</field>
            <field name="model">car.pooling.comment</field>
            <field name="arch" type="xml">
                <form string="Form Viwe">
                    <sheet>
                        <group>
                            <field name="passenger" readonly="1"/>
                        </group>
                        <group>
                            <field name="comment" />
                            <field name="trip_star" widget="priority"/>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

    </odoo>